        * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Afacad', sans-serif;
  line-height: 1.6;
}

/* Header Styling */
header {
  background-color: #0f5256;
  color: #fff;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 1000;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

/* Top Nav (Logo, Search Bar, Icons) */
.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 20px;
  max-width: 1200px;
  margin: 0 auto;
  
}

/* Logo and Search Container */
.logo-search-container {
  display: flex;
  align-items: center;
  flex-grow: 1;
}

.logo img {
  width: 110px;
  margin-right: 10px; 
}

.search-bar {
  display: flex;
  flex-grow: 1;
}

.search-bar input {
  width: 100%;
  padding: 8px 10px;
  border: none;
  border-radius: 5px 0 0 5px;
}

.search-bar button {
  background-color: #69ba6b;
  border: none;
  padding: 8px 15px;
  color: white;
  cursor: pointer;
  border-radius: 0 5px 5px 0;
}

.nav-icons {
  display: flex;
  align-items: center;
}
.cart-icon,.profile-icon:hover{
 color: rgb(184, 180, 180);
}
.nav-icons a,
.hamburger-btn {
  color: white;
  font-size: 1.5rem;
  margin-left: 20px;
}

.cart-icon {
  display: flex;
  align-items: center; 
  position: relative; 
}

/* Cart Count Styles */
.cart-icon .cart-count {
  position: absolute;
  top: -10px; 
  right: -10px; 
  background-color: red;
  color: white;
  border-radius: 50%;
  padding: 3px 6px;
  font-size: 0.8rem;
}


/* Login Button */
.login-btn {
  background-color: white;
  color: #275360;
  padding: 7px 15px;
  border-radius: 5px;
  text-decoration: none;
  font-size: 15px;
  margin-left: 20px;
  cursor: pointer;
  border: none;
 
  transition: 0.15s ease;
}

.login-btn:hover {
  background-color: #bdfcbe;
  color: #388e3c;
  font-weight: bold;
  box-shadow: 0px 0px 10px 2px rgba(255, 255, 255, 0.8); 
}

/* logout button */
.logout-btn{
  background-color: white;
  color: #275360;
  padding: 7px 15px;
  border-radius: 5px;
  text-decoration: none;
  font-size: 15px;
  margin-left: 20px;
  cursor: pointer;
  border: none;
}

.logout-btn:hover{
  background-color: rgb(248, 195, 195);
  color: #d9534f;
  font-weight: bold;
  box-shadow: 0px 0px 10px 2px rgba(255, 255, 255, 0.8); 
}

/* Bottom Nav (Helpline and Links) */
.bottom-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #09343c;
  padding: 10px 20px;
}

.helpline {
  color: #fff;
  font-size: 20px;
}
.helpline a {
  margin-right: 10px; 
  text-decoration: none;
}

.helpline a i {
  color: #fff;
  font-size: 25px;
}
.helpline a i:hover{
  color: rgb(184, 180, 180);
}
.nav-links {
  list-style: none;
  display: flex;
  gap: 20px;
}

.nav-links a {
  color: #fff;
  text-decoration: none;
  font-size: 20px;
  transition: color 0.3s ease;
}
.nav-links a.nav-active {
  color: #69ba6b; 
  font-weight: bold;
}
.nav-links a:hover {
  color: #69ba6b;
}

/* Hamburger Icon Styling */
.hamburger-btn {
  display: none;
  font-size: 1.5rem;
  color: white;
  cursor: pointer;
}


/* Mobile Styling */
@media (max-width: 768px) {

  .top-nav {
    flex-direction: column;
    align-items: flex-start; 
  }

  .logo-search-container {
    width: 100%;
    justify-content: center; 
  }

  /* Search Bar Full Width */
  .search-bar {
    width: 80%; 
    margin: 10px 0;
  }
  .helpline{
    margin: auto;
  }
  
  .nav-icons {
    display: flex;
    justify-content: space-between;
    width: 100%; 
  }

  .hamburger-btn {
    margin-right: auto; 
  }
  .login-btn{
    margin: 0;
  }
 
  .hamburger-btn {
    display: block;
  }

 
  .nav-links {
    display: none;
    flex-direction: column;
    gap: 15px;
    background-color: #0f5256;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    padding: 20px;
  }

 
  .nav-links.show-menu {
    display: flex;
  }
 
.horizontal-line {
  width: 100%;
  height: 1px; 
  background-color: #69ba6b;
  margin: 10px 0; 
}

hr {
  width: 100%;
  height: 1px; 
  background-color: #69ba6b; 
  border: none; 
  margin: 10px 0; 
}

