<body>
  <header>
    <nav class="navbar">
        <span class="hamburger-btn material-symbols-rounded">menu</span>
        <a href="#" class="logo">
          <img src="../images/assest/vegiefy-logo.png" alt="logo">
           
        </a>
        <ul class="links">
            <span class="close-btn material-symbols-rounded">close</span>
            <li><a href="/" >home</a></li>
            <li><a href="/#about-us">about</a></li>
            <li><a href="/product">products</a></li>
            <li><a href="/cart" class="active">Cart</a></li>
            <li><a href="/delivery">delivery</a></li>
            <li><a href="/blog"  >blog</a></li>
            <li><a href="/contact">contact</a></li>
        </ul>
        <div class="profile-loginout-container">
          <% if (!req.user) {%>
              <a href="/login"><button class="login-btn">LOG IN</button></a>
              <%}else{ %>
                  <a class="profile-btn" href="/user/profile" style="text-decoration: none;">
                      <img src="./images/assest/profile-img.png" alt="User Profile" class="profile-img">
                    </a>
                  <h3><a class="logout-btn"  href="/user/logout" >Logout</a></h3>
                <%}%>
              </div>
    </nav>
</header>
    <div class="shopping-cart">
        <div class="product-container">
        
            <% user.cart.forEach(items => {%>
            <div class="product">
                <img src="../images/uploads/<%=items.image%>" alt="Product Image" class="product-image">
                <h2 class="product-name"><%=items.name%></h2>
                <p class="product-description"><%= items.description %>.</p>
                <p class="product-price">₹<%=items.price%></p>

                <a class="remove-btn" href="/user/removeitem/<%=items._id%>">Remove</a>
            </div>
            <% }) %>
    
        </div>
    
        <div class="cart-summary">
            <h2>Cart Summary</h2>
    
            <div class="summary-details">
                <p><i class="fas fa-box"></i> Total Items: <%=cartcount%></p>
                <p><i class="fas fa-money-bill-wave"></i> Subtotal: ₹<%=carttotal%></p>
                <p><i class="fas fa-percent"></i> Discount: 3%</p>
                <p><i class="fas fa-truck"></i> Shipping:free</p>
                <p><i class="fa-solid fa-indian-rupee-sign"></i> Total Price:₹<%=carttotal-carttotal/100*3%></p>
            </div>
        
            <!-- Promo code input -->
            <div class="promo-code">
                <input type="text" placeholder="Enter discount code" />
                <button class="apply-btn">Apply</button>
            </div>
            <div class="divider"></div>
        
            <button class="checkout-btn" onclick="showCheckoutForm()">Proceed to Checkout</button>
        </div>
        
    </div>
   
   <!-- Checkout form -->
   <div class="form-checkout">
    <div class="checkout-form" id="checkoutForm" style="display: none;">
        <h2>Checkout Form</h2>
        <form id="myForm" action="/user/createOrder" method="post">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="<%=user.name%>" required>
            
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" required>
            
            <label for="phone">Phone:</label>
            <input type="tel" id="phone" name="phone" required>
            
            <label for="email">Email:</label>
            <input type="email" id="email" name="email"  value="<%=user.email%>" required>
            
            <label for="paymentMode">Payment Mode:</label>
            <select id="paymentMode" name="paymentMode" required>
                <option value="cashOnDelivery">Cash on Delivery</option>
            </select>
            
            <button type="submit" class="submit-btn">Submit</button>
        </form>
    </div>
</div>



     <!-- footer section -->
     <footer>
        <div class="footer-content">
          <div class="footer-section about">
            <h2 class="logo-text">Vegiefy Organics Farming</h2>
            <p>Sustainable and fresh hydroponically grown produce delivered straight to your table.</p>
            <div class="contact">
              <span><i class="fas fa-phone"></i> &nbsp; +91-8698105221</span>
              <span><i class="fas fa-envelope"></i> &nbsp; support@vegiefy.com</span>
              <span><i class="fas fa-map-marker-alt"></i> &nbsp; Chandrashekar Ward Gondia</span>
            </div>
            <div class="socials">
              <a href="#"><i class="fab fa-facebook"></i>&nbsp; Facebook</a>
              <a href="#"><i class="fab fa-twitter"></i>&nbsp; Twitter</a>
              <a href="#"><i class="fab fa-instagram"></i>&nbsp; Instagram</a>
              <a href="#"><i class="fab fa-linkedin"></i>&nbsp; Linkedin</a>
            </div>
          </div>
          <div class="footer-section links">
            <h2>Quick Links</h2>
            <ul>
              <a href="/#about-us" ><li>About Us</li></a>
              <a href="/product"><li>Products</li></a>
              <a  href="/blog"><li>Blog/News</li></a>
              <a  href="/delivery"><li>Delivery</li></a>
              <a href="/contact" ><li>Contact Us</li></a>
              <a href="/delivery#faq"><li>FAQs</li></a>
            </ul>
          </div>
          <div class="footer-section contact-form">
            <h2>Contact Us</h2>
            <form action="index.html" method="post">
              <input type="email" name="email" class="text-input contact-input" placeholder="Your email address...">
              <textarea name="message" class="text-input contact-input" placeholder="Your message..."></textarea>
              <button type="submit" class="btn btn-big contact-btn">
                <i class="fas fa-envelope"></i>
                Send
              </button>
            </form>
          </div>
        </div>
        <div class="footer-bottom">
          &copy; www.vegiefy.com 
        </div>
      </footer>
