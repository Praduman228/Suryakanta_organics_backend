         /* css for shopping-page */
        .product-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            width: 65%; 
            padding: 0;
            margin-top: 70px;
        }

        .product {
            background-color: #fff;
            margin: 10px;
