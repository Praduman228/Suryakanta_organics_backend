}

/* Order Options Styles */
.order-options {
    display: none;
    justify-content: space-between;
    margin-bottom: 20px;
}

.option-btn {
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    background-color: #0f5256;
    color: #fff;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.option-btn:hover {
    background-color: #fff;
    color: #09343c;
    box-shadow: 2px 2px 2px rgba(90, 89, 89, 0.4);
}

/* Order Message Styles */
.order-message {
    padding: 15px;
    margin-bottom: 20px;
    border: 1px solid #ddd;
    border-radius: 5px;
    background-color: #f8f9fa;
    color: #333;
    font-size: 16px;
    text-align: center;
}

/* Delivery Form Styles */
/* Delivery Form Styles */
.delivery-form {
    display: none; /* Hidden initially */
    flex-direction: column;
    gap: 5px;
}

.delivery-form label {
    font-size: 14px;
    font-weight: bold;
}

.delivery-form input,
.delivery-form select {
    padding: 5px;
    font-size: 14px;
    border: 1px solid #ddd;
    border-radius: 5px;
}

.delivery-form select {
    cursor: pointer;
}

.submit-btn {
    padding: 10px;
    background: linear-gradient(135deg, #0f5256, #09343c);
    color: #fff;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.submit-btn:hover {
  background: linear-gradient(135deg, #09343c, #0f5256);
}
/* Table Styles */
.cart-table-container {
    width: 100%;
    overflow: hidden;
}

.cart-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1rem;
    table-layout: fixed; 
}

.cart-table th, .cart-table td {
    padding: 0.5rem;
   
    text-align: left;
    word-wrap: break-word;
} 

.cart-table th {
    font-size: 1.1rem;
    border: 1px solid #ddd;
    box-shadow: inset -5px -5px 10px white,inset 2px 2px 8px grey ;
}

.cart-table td {
    font-size: 1rem;
    box-shadow: -5px -5px 10px white,4px 4px 8px gray;
  
}

.cart-table .remove-btn {
    color: white;
    background-color: #0f5256;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    padding: 5px;
}


@media (max-width: 480px) {
    .cart-table th, .cart-table td {
        font-size: 0.8rem;
        padding: 0.4rem;
    }
   .quantity-btn{
    padding: 5px;
   }
    .cart-table th:nth-child(5),
    .cart-table td:nth-child(5) {
        display: none; 
    }
}


@media (max-width: 768px) {
    .cart-table {
        font-size: 0.8rem;
