/* css for products */
.button-container {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1rem;
    margin-top: 130px;
    border: none;
    border-bottom: 3px solid #ecf7f0;
    box-shadow: 2px 2px 2px rgba(90, 89, 89, 0.4);
    padding-bottom: 30px;
   
}

.button-container button {
    padding: 10px 20px;
