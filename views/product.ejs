        }

       /* Shopping Cart Styles */
.cart {
    border: 1px solid #ddd;
    border-radius: 10px;
    padding: 1.5rem;
    width: 100%;
    max-width: 700px;
    background-color: #fff;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin: 2rem auto;
    
}

.cart h2 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    color: #0f5256;
    border-bottom: 2px solid #0f5256;
    padding-bottom: 0.5rem;
}

.cart .cart-items {
    max-height: 400px;
    overflow-y: auto;
    margin-bottom: 1rem;
}

.cart-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.8rem 0;
    border-bottom: 1px solid #eee;
}

.cart-item:last-child {
    border-bottom: none;
}

.cart-item p {
    margin: 0;
    color: #555;
}

.cart-item .quantity {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.cart-item .quantity button {
    padding: 0.4rem 0.8rem;
    background-color: #0f5256;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.cart-item .quantity button:hover {
    background-color: #09343c;
}

.cart-item .quantity span {
    font-size: 1rem;
    color: #333;
}

.total-price {
    font-size: 1.4rem;
    font-weight: bold;
    text-align: right;
    margin-top: 1rem;
    color: #0f5256;
}

.checkout {
    padding: 0.7rem 1.5rem;
    background-color: #0f5256;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    display: block;
    width: 100%;
    text-align: center;
}

.checkout:hover {
    background-color: #09343c;
}

.clear-cart {
    padding: 0.7rem 1.5rem;
    background: linear-gradient(135deg, #0f5256, #09343c);
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    display: block;
    width: 100%;
    text-align: center;
    margin-bottom: 1rem;
}

.clear-cart:hover {
    background: linear-gradient(135deg, #09343c, #0f5256);
   
}
.place-order{
    background-color: #09343c;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    padding: 10px;
    margin-left: 43%;
    
}
.place-order:hover{
